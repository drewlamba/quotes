<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="quotes content">
    <h2>All Quotes</h2>

    <% if (quotes.length > 0) { %>
      <% quotes.forEach(quote => { %>
        <a class="single" href="/quotes/<%= quote._id %>">
          <h3 class="title"><%= quote.author %></h3>
          <p class="snippet"><%= quote.details %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no Quotes to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>